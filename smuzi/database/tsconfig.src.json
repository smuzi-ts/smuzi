{
  "extends": "../../tsconfig.common.json",
  "include": ["./src", "./src/**/*.json"],
  "compilerOptions": {
    "types": ["node"],
    "outDir": "build/src",
    "tsBuildInfoFile": ".tsbuildinfo/src.tsbuildinfo",
    "rootDir": "src",
    "composite": true,
    "baseUrl": "./src",
    "paths": {
      "#lib/*": ["*"]
  },
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}